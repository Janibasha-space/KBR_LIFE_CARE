{
  "expo": {
    "name": "KBR Life Care",
    "slug": "kbr-hospital-app",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/hospital-logo.jpeg",
    "userInterfaceStyle": "light",
    "privacy": "public",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "splash": {
      "image": "./assets/Gemini_Generated_Image_5ppbdb5ppbdb5ppb.png",
      "resizeMode": "cover",
      "backgroundColor": "#4A90E2"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kbrhospital.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to capture profile pictures and medical documents",
        "NSPhotoLibraryUsageDescription": "This app accesses photo library to select images for profile and medical records",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/hospital-logo.jpeg",
        "backgroundColor": "#4A90E2"
      },
      "package": "com.kbrhospital.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-build-properties",
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with medical staff.",
          "cameraPermission": "The app accesses your camera to let you take photos for medical records."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b627a1cf-8382-4f5a-b56e-89fa51b352e2"
      }
    }
  }
}
